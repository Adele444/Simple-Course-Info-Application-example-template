<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileApplicationsDevelopment"
    android:orientation="vertical">


    <!-- picture for mobile applications -->
    <ImageView
        android:id="@+id/mad"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:contentDescription="mobile image"
        android:src="@drawable/madimage"
        />

    <TextView
        android:id="@+id/madDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mobile Applications Development Course"
        android:textSize="18sp"
        android:textStyle="bold"/>


</LinearLayout>